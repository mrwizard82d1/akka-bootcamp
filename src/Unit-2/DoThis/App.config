<?xml version="1.0" encoding="utf-8"?>
<configuration>
    <!-- Must declare the AkkaConfigurationSection "at the top" of `App.config`. -->
    <!-- I think this means "early" and definitely means before the reader encounters the 
    `akka` section. -->
    <configSections>
        <section name="akka" type="Akka.Configuration.Hocon.AkkaConfigurationSection, Akka" />
    </configSections>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
    </startup>
  <runtime>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <dependentAssembly>
        <assemblyIdentity name="Newtonsoft.Json" publicKeyToken="30ad4fe6b2a6aeed" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-4.5.0.0" newVersion="4.5.0.0" />
      </dependentAssembly>
    </assemblyBinding>
  </runtime>
    
    <akka>
        <hocon>
            <![CDATA[
                akka {
                    actor {
                        deployment {
                            # This nested section will be accessed by the key `akka.actor.deployment`
                            # Used to configure our `ChartingActor`
                            # Because the name of the actor (in `Main.cs`) is "charting", we supply the 
                            # path `/charting` to identify the actor. The `/user` portion of the actor
                            # path is implied.
                            /charting {
                                # Causes `ChartingActor` to run on the UI thread for WinForms.
                                dispatcher = akka.actor.synchronized-dispatcher
                            }
                        }
                    }
                }
            ]]>
        </hocon>
    </akka>
    
</configuration>